<div class="navbar sticky">
  <div class="navbar-logo">
    <%= link_to root_path, class: "d-flex justify-content-between align-items-center" do %>
      <%= image_tag "—Pngtree—plant pot_4543569.png" %>
      <p class="text-light ml-2">Easy Tree</p>
    <% end %>
  </div>

  <div class="navbar-menu" id="navbarSupportedContent">
    <div class="nav-title <%= 'active' if current_page?(root_path) %>">
      <%= link_to "Home", root_path %>
    </div>
    <% if user_signed_in? %>
      <div class="nav-title <%= 'active' if current_page?(plants_path) %>">
        <%= link_to "Mes plantes", plants_path %>
      </div>
      <div class="nav-title dropdown">
          <% @user = User.find(current_user[:id]) %>
          <% if @user.photo.key != nil %>
            <%= cl_image_tag @user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "user/default-user-image.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Mon Profil", dashboard_path, class: "dropdown-item " %>
            <%= link_to "Mes plantes à arroser",  plants_to_water_plants_path, class: "dropdown-item " %>
            <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
    <% else %>
      <div class="nav-title <%= 'active' if current_page?(new_user_session_path) %>">
        <%= link_to "Connexion", new_user_session_path %>
      </div>
      <div class="nav-title <%= 'active' if current_page?(new_user_registration_path) %>">
        <%= link_to "Inscription", new_user_registration_path %>
      </div>
    <% end %>
  </div>
</div>
